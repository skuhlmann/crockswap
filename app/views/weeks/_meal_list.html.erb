<%= form_tag(group_admin_meals_path(@group.name, @week.id)) do %>
  <% @list_users.each do |member| %>
    <% if @is_admin %>
        <%= hidden_field_tag("user_#{member.id}[user_id]", member.id) %>
      <div class="dashboard-table-row">
        <div class="dashboard-table-cell"><%= member.name %></div>
        <div class="dashboard-table-cell">
            <% if member.week_meal(@week) %>
                <%= text_field_tag("user_#{member.id}[name]", member.week_meal(@week).name) %>
            <% else %>
                <%= text_field_tag("user_#{member.id}[name]") %>
            <% end %>
          </div>
          <div class="dashboard-table-cell">
            <% if member.week_meal(@week) %>

              <%= render partial: "meals/rate_meal", locals: { meal: member.week_meal(@week) } %>

              <% member.week_meal(@week).ratings.each do |rating| %>
                <%= fa_icon "star-o" %>
              <% end %>
            <% end %>
          </div>
      </div>

    <% else %>
    <div class="dashboard-table-row">
      <div class="dashboard-table-cell"><%= member.name %></div>
      <div class="dashboard-table-cell">
        <% if member.week_meal(@week) %>
          <%= member.week_meal(@week).name  %>
        <% else %>
          Hasn't entered a meal for this week.
        <% end %>
        </div>
      <div class="dashboard-table-cell">
        <% if member.week_meal(@week) %>
          <% member.week_meal(@week).ratings.each do |rating| %>
            <%= fa_icon "star-o" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  <% end %>
  <% if @is_admin %>
    <%= submit_tag "Edit these meals" %>
  <% end %>
<% end %>