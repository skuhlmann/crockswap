<div class="container">
  <div class="row">
    <div class="u-full-width">

      <h3>Create a schedule</h3>
      <p>You can edit individual week defaults and add more weeks after creating the schedule.</p>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <%= form_for(@week, url: group_weeks_path(@group.name)) do |f| %>

        <div class="field">
          <%= f.label :start_date, "1st week of swapping" %>
          <%= f.date_field :start_date %>
        </div>

        <div class="field">
          <%= label_tag :number_of_weeks %>
          <%= number_field_tag :number_of_weeks %>
        </div>

        <div class="checkbox-area">
          <p>Default swap day</p>
            <% @days.each do |day| %>
            <div class="radio-area">
                <%= label_tag :swap_date, day, class: "radio-label" %>
                <%= f.radio_button(:swap_date, day, class: "radio-button") %>
            </div>
            <% end %>
        </div>

        <div class="field">
          <%= f.label :swap_location, "Default swap location" %>
          <%= f.text_field :swap_location %>
        </div>

        <div class="actions">
          <%= submit_tag "Create schedule" %>
        </div>

      <% end %>
    </div>
  </div>
</div>