<div class="container">
  <%= render partial: "shared/toolbar", locals: { group: @group } %>
  <div class="row">
    <div class="u-full-width">
      <% unless @groups.empty? %>
        <%= render "home/swapboard_partial", object: @group %>
      <% else %>
        <p>You aren't in any groups yet.</p>
        <%= link_to new_group_path do %>
          <p><%= fa_icon "users" %> Start a group</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>