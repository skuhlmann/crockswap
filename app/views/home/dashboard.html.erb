<div class="container">
  <div class="row">
    <div class="u-full-width">
      <% unless @groups.empty? %>
        <p class="medium"><%= fa_icon "users" %> My groups</p>
        <%= render "groups/group_card", collection: @groups %>
      <% else %>
        <p>You aren't in any groups yet.</p>
      <% end %>
    </div>
  </div>
  <div class="u-full-width">
    <%= link_to new_groups_path  do %>
      <p><%= fa_icon "plus" %> Add a new group</p>
    <% end %>
  </div>
</div>