<%= form_for(group, url: group_path(group.name)) do |f| %>
  
  <%= render partial: "shared/alerts" %> 

  <%= f.label :name, class: "field-label" %>
  <%= f.text_field :name %>

  <%= f.label :budget, class: "field-label" %>
  <%= f.number_field :budget, value: number_with_precision(f.object.budget, precision: 2) %>

  <%= f.label :container, class: "field-label" %>
  <%= f.select :container_id, @containers, {include_blank: true} %>

  <br><br>

  <%= f.submit "Update group" %>
<% end %>
