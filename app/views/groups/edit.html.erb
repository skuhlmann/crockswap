<div class="container">
  <div class="row">
    <div class="u-full-width">

      <h3>Group Settings</h3>
      <p><%= @group.name %></p>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <%= form_for(@group, url: group_path(@group.name)) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :budget %>
        <%= f.number_field :budget %>

        <%= f.label :max_participants %>
        <%= f.number_field :max_participants %>

        <%= f.label :swap_location %>
        <%= f.text_field :swap_location %>

        <%= f.label :container %>
        <%= f.select :container_id, @containers, {include_blank: true} %>

        <div class="checkbox-area">
          <p>Group Dietary Restrictions <span class="instruction-label">(Check all that apply)</span></p>
          <%= f.collection_check_boxes(:diet_restriction_ids, @diet_restrictions, :id, :name, class:"label-checkbox" ) do |b| %>
              <%=b.check_box + b.text%>
          <% end %>
        </div>

        <%= f.submit "Update group" %>
      <% end %>

    </div>
  </div>
</div>