<div class="container">
  <div class="row">
    <div class="ten columns">

      <h3><%= @group.name %></h3>
      <p>Budget: <%= number_to_currency(@group.budget) %></p>
    </div>
    <div class="two columns">
      <% if @group.admin == current_user.id %>
        <p><%= link_to "Settings", edit_group_path(@group.name) %></p>
        <p><%= link_to "Manage swappers", group_members_path(@group.name) %></p>
      <% end %>
    </div>
  </div>
</div>