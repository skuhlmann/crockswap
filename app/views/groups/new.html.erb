<div class="container">
  <div class="row">
    <div class="u-full-width">

      <h3>Nobody swaps alone. Start a group here.</h3>

      <%= form_for(@group) do |f| %>

        <%= render partial: "shared/alerts" %> 

        <div class="field">
          <%= f.label :name, class: "field-label" %>
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :budget, class: "field-label" %>
          <%= f.number_field :budget, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :container, class: "field-label" %>
          <%= f.select :container_id, @containers, {include_blank: true} %>
        </div>

        <div class="actions">
          <%= f.submit "Create group" %>
        </div>
      <% end %>

    </div>
  </div>
</div>