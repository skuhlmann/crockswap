<div class="field">
  <%= f.label :category %>
  <%= f.select "meal_category_id", options_from_collection_for_select(@week.available_categories, "id", "name"), include_blank: "Select"  %>
</div>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :recipe_url %>
  <%= f.text_field :recipe_url %>
</div>

<div class="checkbox-area">
  <p>Cooking/Reheating Instructions</p>
  <div class="field">
    <%= f.label :cooking_time %>
    <%= f.text_field :cooking_time %>
  </div>

  <div class="field">
    <%= f.label :cooking_degrees %>
    <%= f.text_field :cooking_degrees %>
  </div>

  <div class="field">
    <%= f.label :covered %>
    <%= f.check_box :covered %>
  </div>
  
  <div class="field">
    <%= f.label :freezable %>
    <%= f.check_box :freezable %>
  </div>
</div>