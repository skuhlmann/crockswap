<div class="container">
  <div class="row">
    <div class="u-full-width">

      <h3>Add your meal</h3>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <%= form_for([@group, @week, @meal]) do |f| %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :recipe_url %>
          <%= f.text_field :recipe_url %>
        </div>

        <div class="checkbox-area">
          <p>Cooking/Reheating Instructions</p>
          <div class="field">
            <%= f.label :cooking_time %>
            <%= f.text_field :cooking_time %>
          </div>

          <div class="field">
            <%= f.label :cooking_degrees %>
            <%= f.text_field :cooking_degrees %>
          </div>

          <div class="field">
            <%= f.label :covered %>
            <%= f.check_box :covered %>
          </div>

          <div class="field">
            <%= f.label :timing_to_eat, "Time to eat" %>
            <%= f.text_field :timing_to_eat %>
          </div>

          <div class="field">
            <%= f.label :freezable %>
            <%= f.check_box :freezable %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Create meal" %>
        </div>
      <% end %>

    </div>
  </div>
</div>